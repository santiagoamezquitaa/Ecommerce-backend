<h2>Agregar nuevo producto:</h2>

<form id="formAddProduct">
    <label for="title">Nombre del producto:</label>
    <input type="text" , id="title" , name="title"><br>

    <label for="description">Descripción del producto:</label>
    <input type="text" , id="description" , name="description"><br>

    <label for="price">Precio:</label>
    <input type="number" , id="price" , name="price"><br>

    <label for="category">Categoria:</label>
    <input type="text" , id="category" , name="category"><br>

    <label for="code">Código del producto:</label>
    <input type="number" , id="code" , name="code"><br>

    <label for="stock">Número de existencias:</label>
    <input type="number" , id="stock" , name="stock"><br>

    <label for="thumbnail">Ruta de la imagen:</label>
    <input type="text" , id="thumbnail" , name="thumbnail"><br>

    <label for="status">Estado del producto (true):</label>
    <input type="text" , id="status" , name="status"><br>

    <input type="submit" value="Agregar producto">
</form>

<br>
<hr>

<h2>Eliminar un producto:</h2>

<form id="formDeleteProduct">
    <label for="idDelete">Id del producto a eliminar:</label>
    <input type="number" , id="idDelete" , name="idDelete"><br>

    <input type="submit" value="Eliminar producto">
</form>

<br>
<hr>
<br>

<div id="container">
    {{#each products}}
    <div class="productsList" data-id="{{id}}">
        <p>
            <strong>Nombre: </strong>{{title}}
        </p>
        <p>
            <strong>Descripción: </strong>{{description}}
        </p>
        <p>
            <strong>Precio: </strong>{{price}}
        </p>
        <p>
            <strong>Categoría: </strong>{{category}}
        </p>
        <p>
            <strong>Código: </strong>{{code}}
        </p>
        <p>
            <strong>Existencias: </strong>{{stock}}
        </p>
        <p>
            <strong>Id del producto: </strong>{{id}}
        </p>
    </div>
    <br>
    {{/each}}
</div>



<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>